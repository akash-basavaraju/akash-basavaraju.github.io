{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "declaration": false,
    "jsx": "react",
    "outDir": "./docs/",
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    // "outFile": "build/bundle.js",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["src/*"],
  "exclude": ["docs/**/*"]
}
