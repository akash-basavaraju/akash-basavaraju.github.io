{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "declaration": false,
    "jsx": "react",
    "outDir": "./build/",
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["src/*"],
  "exclude": ["build/**/*"]
}
